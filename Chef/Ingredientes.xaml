<Window x:Class="WpfApp2.Ingredientes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Chef.viewmodels"
        mc:Ignorable="d"
        Title="Ingredientes" Height="450" Width="650"
        ResizeMode="NoResize">

    <Window.DataContext>
        <vm:IngredienteRecetaViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <!-- Estilo personalizado para Rectangle con degradado -->
        <Style x:Key="RectangleDegradado" TargetType="Rectangle">
            <Setter Property="Fill">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="HotPink" Offset="0.1"/>
                        <GradientStop Color="Orange" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="StrokeThickness" Value="2"/>
        </Style>

        <!-- Estilo personalizado para botón con degradado -->
        <Style x:Key="Botongradiente" TargetType="Button">
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="Yellow" Offset="0"/>
                        <GradientStop Color="HotPink" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="Border" 
                                    Background="{TemplateBinding Background}" 
                                    CornerRadius="20" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}"/>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!-- Cambiar el fondo al pasar el mouse -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="LightYellow" Offset="0"/>
                                            <GradientStop Color="LightPink" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <!-- Cambiar el fondo al hacer clic -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="Orange" Offset="0"/>
                                            <GradientStop Color="Red" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="Wheat">
        <!-- Rectangle con degradado -->
        <Rectangle RadiusX="0" RadiusY="0" Margin="0,-1,0,353" Style="{StaticResource RectangleDegradado}" />

        <!-- Campo para el Nombre del Ingrediente -->
        <TextBlock Text="Nombre Ingrediente:" HorizontalAlignment="Left" Margin="34,99,0,0" VerticalAlignment="Top" Width="150"/>
        <TextBox HorizontalAlignment="Left" Margin="161,99,0,319" Width="200" 
                 Text="{Binding NombreIngrediente, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- Campo para el Ingrediente ID (solo lectura) -->
        <TextBlock Text="Ingrediente ID:" HorizontalAlignment="Left" Margin="34,130,0,0" VerticalAlignment="Top" Width="150"/>
        <TextBox HorizontalAlignment="Left" Margin="126,130,0,288" Width="142" 
                 Text="{Binding IngredienteId, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"/>

        <!-- Campo para la Cantidad -->
        <TextBlock Text="Cantidad:" HorizontalAlignment="Left" Margin="34,170,0,0" VerticalAlignment="Top" Width="150"/>
        <TextBox HorizontalAlignment="Left" Margin="99,170,0,248" Width="142" 
                 Text="{Binding Cantidad, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- Botón Aceptar -->
        <Button Content="Aceptar" Style="{StaticResource Botongradiente}" 
                HorizontalAlignment="Center" Margin="0,370,0,0" VerticalAlignment="Top" 
                Height="35" Width="105" FontWeight="Bold" Click="BtnAceptar_Click"/>

        <!-- Botón Añadir Ingrediente -->
        <Button Content="Añadir Ingrediente" Style="{StaticResource Botongradiente}" 
                HorizontalAlignment="Left" Margin="34,230,0,0" VerticalAlignment="Top" 
                Height="40" Width="167" FontWeight="Bold" Click="BtnAñadirIngrediente_Click"/>

        <!-- Etiqueta "Ingredientes" -->
        <Label Content="Ingredientes" HorizontalAlignment="Left" Margin="10,4,0,0" 
               VerticalAlignment="Top" Height="65" Width="231" FontSize="36"/>

        <TextBlock Text="Lista Ingredientes" HorizontalAlignment="Left" Margin="461,122,0,0" VerticalAlignment="Top"/>
        <!-- ListBox para mostrar la lista de ingredientes -->
        <ListBox HorizontalAlignment="Left" Margin="405,150,0,114"
                 ItemsSource="{Binding ListaIngredientes}" Width="205" />
    </Grid>
</Window>
