<Window x:Class="WpfApp2.Ingredientes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Chef.viewmodels"
        mc:Ignorable="d"
        Title="Ingredientes" Height="450" Width="650"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Estilo personalizado para Rectangle con degradado -->
        <Style x:Key="RectangleDegradado" TargetType="Rectangle">
            <Setter Property="Fill">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="HotPink" Offset="0.1"/>
                        <GradientStop Color="Orange" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="StrokeThickness" Value="2"/>
        </Style>

        <!-- Estilo personalizado para botón con degradado -->
        <Style x:Key="Botongradiente" TargetType="Button">
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="Yellow" Offset="0"/>
                        <GradientStop Color="HotPink" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="Border" 
                                  Background="{TemplateBinding Background}" 
                                  CornerRadius="20" 
                                  BorderBrush="{TemplateBinding BorderBrush}" 
                                  BorderThickness="{TemplateBinding BorderThickness}"/>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!-- Cambiar el fondo al pasar el mouse -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="LightYellow" Offset="0"/>
                                            <GradientStop Color="LightPink" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <!-- Cambiar el fondo al hacer clic -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="Orange" Offset="0"/>
                                            <GradientStop Color="Red" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="Wheat">
        <!-- Rectangle con degradado -->
        <Rectangle RadiusX="0" RadiusY="0" Margin="0,-1,0,353" Style="{StaticResource RectangleDegradado}" />

        <!-- Etiqueta para "Ingrediente" -->
        <TextBlock HorizontalAlignment="Left" Margin="34,136,0,0" TextWrapping="Wrap" 
                 Text="Ingrediente" VerticalAlignment="Top" Width="72"/>

        <!-- ListBox para mostrar una lista (por ejemplo, ingredientes ya agregados) -->
        <ListBox Margin="257,113,27,84" SelectionChanged="ListBox_SelectionChanged"/>

        <!-- Etiqueta para "Cantidad" -->
        <TextBlock HorizontalAlignment="Left" Margin="34,180,0,0" TextWrapping="Wrap" 
                 Text="Cantidad" VerticalAlignment="Top" Width="56"/>

        <!-- TextBox para ingresar el ID del Ingrediente (bind a IngredienteId) -->
        <TextBox HorizontalAlignment="Left" Margin="34,157,0,0" TextWrapping="Wrap" 
               VerticalAlignment="Top" Width="142" 
               Text="{Binding IngredienteId, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- TextBox para ingresar la Cantidad (bind a Cantidad) -->
        <TextBox HorizontalAlignment="Left" Margin="34,196,0,0" TextWrapping="Wrap" 
               VerticalAlignment="Top" Width="142" 
               Text="{Binding Cantidad, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- Botón "Aceptar" para guardar el ingrediente -->
        <Button Content="Aceptar" Style="{StaticResource Botongradiente}" 
              HorizontalAlignment="Center" Margin="0,370,0,0" VerticalAlignment="Top" 
              Height="35" Width="105" FontWeight="Bold" Click="BtnAceptar_Click"/>

        <!-- Botón "Añadir Ingrediente" para agregar a una lista o realizar otra acción -->
        <Button Content="Añadir Ingrediente" Style="{StaticResource Botongradiente}" 
              HorizontalAlignment="Left" Margin="34,237,0,0" VerticalAlignment="Top" 
              Height="40" Width="167" FontWeight="Bold" Click="BtnAñadirIngrediente_Click"/>

        <Label Content="Ingredientes" HorizontalAlignment="Left" Margin="10,4,0,0" 
             VerticalAlignment="Top" Height="65" Width="231" FontSize="36"/>

        <TextBlock HorizontalAlignment="Left" Margin="257,92,0,0" TextWrapping="Wrap" 
                 Text="Lista Ingredientes" VerticalAlignment="Top"/>
    </Grid>
</Window>
